---
import '../styles/global.css';

setInterval(() => {
  return Astro.redirect('/');
}, 3000);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
  </head>
  <body>
    <p>Mail could not be sent 😭 📫</p>
    <a href="/">⬅️ Back</a>
  </body>
  <style>
    body {
      height: 100vh;
      width: 100vw;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 1rem;
    }
    p {
      font-family: 'Inter';
      color: rgb(202, 202, 202);
      font-weight: bold;
      font-size: 2rem;
    }
    a {
      position: absolute;
      top: 1rem;
      left: 1rem;
      font-family: 'Inter';
      color: rgb(202, 202, 202);
      font-size: 1.2rem;
      cursor: pointer;
      text-decoration: none;
      background-color: rgba(39, 50, 73, 0.689);
      padding: 0.7rem;
      border-radius: 0.5rem;
      font-weight: bold;
    }
  </style>
</html>
