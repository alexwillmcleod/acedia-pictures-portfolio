  <body>
    <Header>
      <nav>
        <a href="">
          <svg
            viewBox="0 0 32 32"
            width="60"
          >
            <circle
              cx="8.9"
              cy="21"
              r="8.4"
              fill="var(--dark-color)"
              stroke="var(--dark-color)"
            ></circle>
            <circle
              cx="25"
              cy="7.4"
              r="5.6"
              fill="none"
              stroke="var(--dark-color)"
            ></circle>
          </svg>
        </a>
      </nav>
      <nav class="nav-bar">
        <a
          class="nav-item"
          href="#testimonials"
          >Testimonials</a
        >
        <a
          class="nav-item"
          href="#portfolio"
          >Portfolio</a
        >

        <a
          class="nav-item"
          href="#get-started"
          >Create With Us</a
        >
      </nav>
      <nav class="hamburger-bar">
        <button class="hamburger-button">
          <svg
            height="32px"
            class="hamburger-icon"
            id="Layer_1"
            style="enable-background:new 0 0 32 32;"
            version="1.1"
            viewBox="0 0 32 32"
            width="32px"
            xml:space="preserve"
            xmlns="http://www.w3.org/2000/svg"
            xmlns:xlink="http://www.w3.org/1999/xlink"
            ><path
              d="M4,10h24c1.104,0,2-0.896,2-2s-0.896-2-2-2H4C2.896,6,2,6.896,2,8S2.896,10,4,10z M28,14H4c-1.104,0-2,0.896-2,2  s0.896,2,2,2h24c1.104,0,2-0.896,2-2S29.104,14,28,14z M28,22H4c-1.104,0-2,0.896-2,2s0.896,2,2,2h24c1.104,0,2-0.896,2-2  S29.104,22,28,22z"
            ></path></svg
          >
        </button>
        <script>
          function toggleHamburgerBar() {
            // Add class to navbar
            const navbar = document.querySelector('.nav-bar')!;
            const navItems = document.querySelectorAll('.nav-item');
            const isShowing = navbar.classList.contains('show');

            if (isShowing) {
              navbar.classList.remove('show');
              navItems.forEach((element) => {
                element.removeEventListener('click', toggleHamburgerBar);
              });
            } else {
              navbar.classList.add('show');
              navItems.forEach((element) => {
                element.addEventListener('click', toggleHamburgerBar);
              });
            }
          }
          document
            .querySelector('.hamburger-button')!
            .addEventListener('click', toggleHamburgerBar);
        </script>
      </nav>
    </Header>

    <div class="card">
      <div class="about-div">
        <h1 class="title">Acedia Pictures</h1>

        <p class="call-to-action">
          Lights, Camera, <a
            class="call-to-action-get-started"
            href="#get-started"
            >Create With Us</a
          >
        </p>
        <p class="about">
          Invent revolutionary cinematic experiences. Immerse your audience with
          industry-leading storytelling and design.
        </p>
      </div>
      <div class="logo-div">
        <svg
          viewBox="0 0 57 47"
          width="60"
          class="gradient-logo"
        >
          <defs>
            <linearGradient
              id="header-shape-gradient"
              x2="0.35"
              y2="1"
            >
              <stop
                offset="0%"
                stop-color="var(--color-stop)"
              ></stop>
              <stop
                offset="30%"
                stop-color="var(--color-stop)"
              ></stop>
              <stop
                offset="100%"
                stop-color="var(--color-bot)"
              ></stop>
            </linearGradient>
          </defs>
          <g>
            <circle
              class="gradient-bg gradient-stroke"
              cx="16"
              cy="31"
              r="15"
              fill="white"
              stroke="white"
            ></circle>
            <circle
              class="gradient-stroke"
              cx="46"
              cy="11"
              r="10"
              fill="none"
              stroke="white"
            ></circle>
          </g>
        </svg>
      </div>
    </div>
    <div
      class="card"
      id="featured"
    >
      <div class="featured-div">
        <p class="card-title">Featured</p>
        <Featured />
      </div>
    </div>
    <div class="scroll-link-div">
      <script>
        // Check if we are the top of the page
        window.addEventListener('scroll', function () {
          const scrollLinkElement = document.querySelector('.scroll-link');
          console.log(`window.scrollY: ${window.scrollY}`);
          if (window.scrollY < 100) {
            // If we are at the top of the page
            (scrollLinkElement! as HTMLElement).style.visibility = 'visible';
          } else {
            (scrollLinkElement! as HTMLElement).style.visibility = 'hidden';
          }
        });
      </script>
      <a
        class="scroll-link show"
        href="#testimonials"
        >Scroll â–¼</a
      >
    </div>
    <div
      class="card"
      id="testimonials"
    >
      <div class="testimonials-div">
        <p class="card-title">Testimonials</p>
        <div class="testimonials-grid">
          <Testimonial
            quote="The Best"
            source="Larry Cai"
          />
          <Testimonial
            quote="Excellent work, loved every moment, created something really special!"
            source="Somebody"
          />
          <Testimonial
            quote="Top tier experience, took my film project to the next level"
            source="Someone else"
          />
        </div>
      </div>
    </div>
    <div
      class="card"
      id="portfolio"
    >
      <div class="portfolio-div">
        <p class="card-title">Portfolio</p>

        <iframe
          class="portfolio-video"
          src="https://www.youtube.com/embed/bTLhrjkkgnY?start=6"
          title="YouTube video player"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen
        ></iframe>
      </div>
    </div>
    <div
      class="card"
      id="get-started"
    >
      <div class="contact-div">
        <p class="card-title">Create With Us</p>
        <div class="contact-form">
          <ContactForm />
        </div>
      </div>
    </div>
    <Footer>
      <p class="foot-item">Acedia Pictures 2023. All Rights Reserved.</p>
      <p class="foot-divider">|</p>
      <a
        class="foot-item"
        href="https://www.instagram.com/acediapictures/"
        target="_blank"
        >Instagram</a
      >
      <p class="foot-divider">|</p>
      <a
        class="foot-item"
        href="https://www.youtube.com/@acediapictures4260"
        target="_blank"
        >Youtube</a
      >
      <p class="foot-divider">|</p>

      <a
        class="foot-item"
        href="https://www.alexwillmcleod.com"
        target="_blank"
        >Developed and deployed with &lt3 by Alex McLeod</a
      >
    </Footer>
    <div class="email-button-div">
      <script>
        // Check if we are the top of the page
        window.addEventListener('scroll', function () {
          const scrollLinkElement = document.querySelector('.scroll-link');
          console.log(`window.scrollY: ${window.scrollY}`);
          if (window.scrollY < 100) {
            // If we are at the top of the page
            (scrollLinkElement! as HTMLElement).style.visibility = 'visible';
          } else {
            (scrollLinkElement! as HTMLElement).style.visibility = 'hidden';
          }
        });
      </script><EmailButton />
    </div>
  </body>

  <style>
    .title {
      font-family: 'Inter';
      font-size: 8rem;
      font-weight: 600;
      line-height: 7rem;
      background: var(--pink-color);
      background: -moz-linear-gradient(
        90deg,
        var(--pink-color) 0%,
        var(--blue-color) 100%
      );
      background: -webkit-linear-gradient(
        90deg,
        var(--pink-color) 0%,
        var(--blue-color) 100%
      );
      background: linear-gradient(
        90deg,
        var(--pink-color) 0%,
        var(--blue-color) 100%
      );
      background-clip: text;
      -webkit-background-clip: text;
      -moz-background-clip: text;

      color: transparent;
      font-weight: bold;
      text-decoration: underline;
    }
    .nav-bar {
      display: flex;
      flex-direction: row;
      gap: 1.2rem;
    }
    .foot-divider {
      font-family: 'Inter';
      color: var(--dark-color);
      text-decoration: none;
      user-select: none;
      font-size: 1rem;
    }
    .nav-item {
      font-family: 'Inter';
      color: var(--dark-color);
      text-decoration: none;
      cursor: pointer;
      user-select: none;
      font-size: 1rem;
    }

    .hamburger-bar {
      display: none;
    }
    .hamburger-icon {
      fill: var(--bright-neutral-color);
      cursor: pointer;
    }
    .hamburger-button {
      background-color: transparent;
      border: none;
    }
    .foot-item {
      font-family: 'Inter';
      color: var(--dark-color);
      text-decoration: none;
      cursor: pointer;
      user-select: none;
      font-size: 1rem;
    }
    .card {
      width: 100vw;
      max-width: 100vw;
      padding: 2rem 5rem;
      display: flex;
      background-color: transparent;
      color: transparent;
      overflow-x: hidden;
      flex-direction: row;
      justify-content: space-between;
      gap: 4rem;
    }
    .call-to-action {
      font-family: 'Inter';
      color: var(--dark-color);
      font-size: 1.8rem;
      font-weight: 500;
    }
    .call-to-action-get-started {
      font-family: 'Inter';
      color: var(--dark-color);
      text-decoration: none;
      padding-bottom: 0.5rem;
      font-weight: bolder;
      background-position: left bottom;
      background-image: linear-gradient(
        90deg,
        rgba(238, 174, 202, 1) 0%,
        rgba(148, 187, 233, 1) 100%
      );
      background-size: 0% 0.6rem;
      background-repeat: no-repeat;
      transition: background-size 300ms ease;
    }
    .call-to-action-get-started:visited {
      /* color: rgb(202, 202, 202); */
      color: var(--dark-color);
    }
    .call-to-action-get-started:hover {
      background-size: 100% 0.6rem;
    }
    .about-div {
      display: flex;
      flex-direction: column;
      justify-content: left;
      align-items: left;
      gap: 2rem;
      width: 50%;
    }
    .logo-div {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 50%;
    }
    .about {
      font-family: 'Inter';
      color: var(--dark-color);

      font-size: 1.4rem;
      font-weight: 500;
    }
    .gradient-logo {
      position: absolute;
      width: 20rem;
      z-index: 10;
      filter: drop-shadow(-1.5rem -1.5rem 10rem rgba(238, 174, 202, 1))
        drop-shadow(1.5rem 1.5rem 10rem rgba(148, 187, 233, 1));
    }

    .gradient-logo .gradient-bg {
      fill: url(#header-shape-gradient) var(--bright-neutral-color);
    }

    .gradient-logo .gradient-stroke {
      stroke: url(#header-shape-gradient) var(--bright-neutral-color);
    }

    #header-shape-gradient {
      --color-stop: #eeaeca;
      --color-bot: #94bbe9;
    }

    .featured-div {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      background-color: transparent;
    }

    .scroll-link-div {
      position: fixed;
      display: flex;
      bottom: 0.5rem;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 100vw;
      height: min-content;
    }

    .scroll-link {
      text-align: center;
      text-decoration: none;
      color: var(--dark-color);
      font-weight: bold;
      font-size: 1.5rem;
    }

    .testimonials-div {
      width: 100%;
      display: flex;
      flex-direction: column;
      gap: 2rem;
      justify-content: center;
    }

    .testimonials-grid {
      /* background-color: rgba(63, 79, 114, 0.151); */
      background-color: rgba(146, 168, 216, 0.151);
      padding: 1rem;
      border-radius: 0.5rem;
      /**
   * User input values.
   */
      --grid-layout-gap: 1rem;
      --grid-column-count: 3;
      --grid-item--min-width: 12rem;

      /**
   * Calculated values.
   */
      --gap-count: calc(var(--grid-column-count) - 1);
      --total-gap-width: calc(var(--gap-count) * var(--grid-layout-gap));
      --grid-item--max-width: calc(
        (100% - var(--total-gap-width)) / var(--grid-column-count)
      );

      display: grid;
      grid-template-columns: repeat(
        auto-fill,
        minmax(
          max(var(--grid-item--min-width), var(--grid-item--max-width)),
          1fr
        )
      );
      grid-gap: var(--grid-layout-gap);
    }

    .card-title {
      font-family: 'Inter';
      /* color: rgb(202, 202, 202); */
      color: rgba(27, 31, 39, 0.98);
      font-size: 1.5rem;
      font-weight: bold;
      margin-right: auto;
    }

    .portfolio-div {
      width: 100%;
      display: flex;
      overflow-x: hidden;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 2rem;
    }

    .portfolio-video {
      width: 80vw;
      height: calc((9 / 16) * 80vw);
    }

    .contact-div {
      width: 100%;
      display: flex;
      flex-direction: column;
      gap: 2rem;
      align-items: center;
    }

    .email-button-div {
      position: fixed;
      width: 4.5rem;
      bottom: 1rem;
      right: 1rem;
      cursor: pointer;
      z-index: 5;
    }

    @media screen and (max-width: 1220px) {
      .card {
        display: flex;
        flex-direction: column-reverse;
        justify-content: center;
      }
      .about-div {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
      }
      .logo-div {
        width: 100%;
      }
      .title {
        align-self: center;
      }
      .gradient-logo {
        position: initial;
      }
    }

    @media screen and (max-width: 550px) {
      .title {
        font-size: 6rem;
      }
      .card {
        padding: 1.2rem;
      }

      .nav-bar,
      .foot-divider {
        display: none;
      }

      .nav-bar.show {
        display: flex;
        flex-direction: column;
        position: fixed;
        top: 6.01rem;
        padding: 3rem;
        left: 0;
        z-index: 999;
        width: 100vw;

        background-color: var(--light-color-transparent);
        /* background-color: rgba(27, 31, 39, 0.98); */
        backdrop-filter: blur(1rem);
      }

      .nav-bar.show * {
        font-size: 1.6rem;
        font-weight: bold;
      }

      .hamburger-bar {
        display: flex;
      }

      .email-button-div {
        display: none;
        visibility: hidden;
      }
    }
  </style>
</html>
